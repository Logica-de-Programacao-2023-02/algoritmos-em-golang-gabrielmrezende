//Faça um algoritmo que leia três números reais e mostre a média ponderada entre eles, com pesos 2, 3 e 5, respectivamente.

package main

import "fmt"

func main() {
	var n1, n2, n3 float64
	fmt.Print("Informe um número: ")
	fmt.Scan(&n1)
	fmt.Print("Informe outro número: ")
	fmt.Scan(&n2)
	fmt.Print("Informe outro número: ")
	fmt.Scan(&n3)

	media := ((n1 * 2) + (n2 * 3) + (n3 * 5)) / 10

	fmt.Print("A média pondera dos respectivos número é: ", media)
}
